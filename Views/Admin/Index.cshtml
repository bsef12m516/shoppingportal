@{
    ViewBag.Title = "Login";
}
@{
    Layout = null;
}
<h1 style="font-family:'Lucida Handwriting'"><b>ADMIN PANNEL</b></h1>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/files2/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/files2/font-awesome.min.css" rel="stylesheet" />

    
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1 style="font-family:Lucida Handwriting">Login </h1>
        </div>
        
        <form action="/Admin/Login" class="col-md-12">
            <div class="form-group">
                <input type="text" name="Email" class="form-control input-lg" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" name="Password" class="form-control input-lg" placeholder="Password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Sign In</button>

            </div>
        </form>
        
    </div>
    <script src="~/Content/files2/jquery-1.10.2.min.js"></script>

    <script src="~/Content/files2/bootstrap.min.js"></script>
    <script src="~/Content/files4/morris.min.js"></script>
</body>
</html>